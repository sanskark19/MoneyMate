<button class="form-control" style="max-width: 100px" @onclick="OnSearchClicked">
    Search
</button>

@code {
    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private string _searchItem;

    private async Task OnSearchClicked()
    {
        Console.WriteLine("Search button clicked!"); // Debugging line
        await OnSearch.InvokeAsync(_searchItem);
    }
}